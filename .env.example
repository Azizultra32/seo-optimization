# ===========================================
# REQUIRED - Supabase Configuration
# ===========================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_POSTGRES_URL=postgres://postgres.xxx:password@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# ===========================================
# REQUIRED - OpenAI (for AI features)
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# REQUIRED - Admin Protection
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# ===========================================
# OPTIONAL - Site Configuration
# ===========================================
SITE_URL=https://drghahary.com
NEXT_PUBLIC_SITE_URL=https://drghahary.com

# ===========================================
# OPTIONAL - Google Search Console
# ===========================================
# JSON credentials for Search Console API
# Paste as single line, escaped JSON
SEARCH_CONSOLE_CREDENTIALS_JSON={"type":"service_account",...}
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# Google verification meta tag value
NEXT_PUBLIC_GOOGLE_VERIFICATION=your-google-verification-code

# ===========================================
# OPTIONAL - Email Reporting
# ===========================================
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# ===========================================
# OPTIONAL - CI/CD
# ===========================================
CRON_SECRET=your-random-cron-secret

# ===========================================
# OPTIONAL - Analytics
# ===========================================
# PageSpeed Insights API key for CI/CD
PAGESPEED_API_KEY=your-pagespeed-api-key
